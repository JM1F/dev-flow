<UserControl x:Class="dev_flow.Views.GeneralDisplayBoxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d">
    
    <Border CornerRadius="15" Background="Red" BorderThickness="1">
        <StackPanel Orientation="Horizontal">
            <!-- Icon -->
            <TextBlock x:Name="IconTextBlock" Margin="10,0,0,0" FontSize="16" FontWeight="Bold" />

            <!-- Title -->
            <TextBlock x:Name="TitleTextBlock" Margin="10,0,0,0" FontSize="16" FontWeight="Bold" />

            <!-- Additional content placeholder -->
            <ContentPresenter />
        </StackPanel>
    </Border>
</UserControl>
